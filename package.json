{
  "name": "uhhhh",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "turbo run dev --no-cache --parallel --include-dependencies --continue",
    "api:dev": "turbo run dev --scope=api --include-dependencies --no-cache",
    "api:build": "turbo run build --scope=api",
    "api:start": "turbo run start --scope=api",
    "web:dev": "turbo run dev --scope=web --include-dependencies --no-cache",
    "web:build": "turbo run build --scope=web",
    "web:start": "turbo run start --scope=web"
  },
  "devDependencies": {
    "lerna": "^5.5.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "turbo": "^1.4.5",
    "typescript": "^4.8.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.11"
}
